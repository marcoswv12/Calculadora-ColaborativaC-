<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CalculadoraApp.HistoryWindow"
        Width="300" Height="400" Title="Histórico de Operações">
