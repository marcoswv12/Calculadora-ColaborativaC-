    <TextBlock Text="Histórico:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
    <ListBox Name="lstHistory" Height="300" />
    <Button Content="Fechar" Click="Close_Click" HorizontalAlignment="Right" Margin="0,10,0,0"/>
  </StackPanel>
</Window>
